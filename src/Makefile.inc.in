XENOMAI_KERNEL_THREADS_BUILD_SYS = @XENOMAI_KERNEL_THREADS_BUILD_SYS@
RTAI_KERNEL_THREADS_BUILD_SYS = @RTAI_KERNEL_THREADS_BUILD_SYS@
BUILD_SYS = $($(THREADS)_THREADS_BUILD_SYS)

# module extension, used when insmod'ing
